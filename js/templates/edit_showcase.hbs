<h2>Showcase</h2>

<form {{action save on="submit"}}>
  
  <p>
    <label for="wine_id">Wine id</label><br>
    {{view Ember.TextField valueBinding="wine_id" id="wine_id"}}
  </p>
  
  <p>
    <label for="name">Name</label><br>
    {{view Ember.TextField valueBinding="name" id="name"}}
  </p>
  
  <p>
    <label for="published">Published</label><br>
    {{view Ember.TextField valueBinding="published" id="published"}}
  </p>
  
  <p>
    <label for="version">Version</label><br>
    {{view Ember.TextField valueBinding="version" id="version"}}
  </p>
  
  <p>
    <button type="submit">Save</button>
  </p>

</form>

